#!/bin/ksh

# OpenBSD rc script

daemon="/usr/local/bin/fin"

. /etc/rc.d/rc.subr

rc_reload=NO

rc_post() {
	pkill -T "${daemon_rtable}" -f fin

	if [[ -c /dev/dri/card0 ]]; then
		chown root /dev/dri/card0
	fi
	if [[ -c /dev/dri/renderD128 ]]; then
		chown root /dev/dri/renderD128
	fi
}

rc_cmd $1
